{
  "name": "gelatobase",
  "version": "1.0.0",
  "description": "Gelato flavor tracking database",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "build": "react-scripts build",
    "dev": "concurrently \"react-scripts start\" \"node backend/server.js\"",
    "dev:frontend": "react-scripts start",
    "dev:backend": "cd backend && node server.js",
    "install-all": "npm install && cd backend && npm install"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@fontsource/ibm-plex-mono": "^5.0.8",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
